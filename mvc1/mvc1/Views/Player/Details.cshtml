@model mvc.Models.Player

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<table class="table">

    <tr>
        <th>Key</th>
        <th>Value</th>
    </tr>

    <tr>
        <td><b>Team</b></td>
        <td>@(Model.TeamId.HasValue ? Model.Team.Name : "-")</td>
    </tr>

    <tr>
        <td><b>Name</b></td>
        <td>@Model.Name</td>
    </tr>

    <tr>
        <td><b>Age</b></td>
        <td>@Model.Age</td>
    </tr>

</table>

<div class="form-group" role="group">
    @Html.ActionLink("Back to list", "List", null, new { @class = "btn btn-default", @role = "button" })
    @Html.ActionLink("Edit player", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary", @role = "button" })
</div>

